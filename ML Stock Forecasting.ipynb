import numpy as np
import pandas as pd
import yfinance as yf
from sklearn.model_selection import TimeSeriesSplit
from sklearn.pipeline import Pipeline
from sklearn.preprocessing import StandardScaler
from sklearn.linear_model import Ridge
from sklearn.ensemble import RandomForestRegressor
from sklearn.metrics import mean_absolute_error, mean_squared_error
import matplotlib.pyplot as plt

pd.set_option("display.float_format", lambda x: f"{x:,.6f}")

# PART 2: Data Download
ticker = "AAPL"  # Fixed typo
start = "2015-01-01"
end = None

print(f"Downloading {ticker} data...")
df = yf.download(ticker, start=start, end=end, auto_adjust=True, progress=False)
df = df.dropna()
print(f"Data shape: {df.shape}")
print(df.head())

# PART 3: Feature Engineering
data = df.copy()

# Past returns (momentum)
data["ret_1"] = data["Close"].pct_change(1)
data["ret_5"] = data["Close"].pct_change(5)
data["ret_10"] = data["Close"].pct_change(10)

# Volatility (risk proxy)
data["vol_10"] = data["ret_1"].rolling(10).std()

# Trend indicator
data["ma_gap"] = (
    data["Close"].rolling(10).mean() / data["Close"].rolling(20).mean() - 1
)

# Volume activity
data["volchg_5"] = data["Volume"].pct_change(5)

# Target: tomorrow's return
data["y"] = data["Close"].pct_change(1).shift(-1)
data = data.dropna()

print(f"\nData after feature engineering: {data.shape}")

# TASK 4: Prepare features and target
features = ["ret_1", "ret_5", "ret_10", "vol_10", "ma_gap", "volchg_5"]
X = data[features]
y = data["y"]

# TASK 5: Define models
models = {
    "Baseline": None,
    "Ridge": Pipeline([
        ("scaler", StandardScaler()),
        ("model", Ridge(alpha=1.0))
    ]),
    "RandomForest": RandomForestRegressor(
        n_estimators=300,
        max_depth=6,
        random_state=42
    )
}

# TASK 6-9: Walk-forward validation for all models
tscv = TimeSeriesSplit(n_splits=8)
results = []

for model_name, model in models.items():
    print(f"\n{'='*60}")
    print(f"Testing model: {model_name}")
    print(f"{'='*60}")
    
    preds = pd.Series(index=X.index, dtype=float)
    
    for fold, (train_idx, test_idx) in enumerate(tscv.split(X)):
        X_train, X_test = X.iloc[train_idx], X.iloc[test_idx]
        y_train = y.iloc[train_idx]
        
        if model_name == "Baseline":
            fold_pred = np.zeros(len(X_test))
        else:
            model.fit(X_train, y_train)
            fold_pred = model.predict(X_test)
        
        preds.iloc[test_idx] = fold_pred
    
    # TASK 7: Evaluate predictions
    oos = data.loc[preds.dropna().index].copy()
    oos["pred"] = preds.dropna()
    oos["actual"] = oos["y"]
    
    # Accuracy metrics
    mae = mean_absolute_error(oos["actual"], oos["pred"])
    mse = mean_squared_error(oos["actual"], oos["pred"])
    rmse = np.sqrt(mse)
    
    # Trading strategy
    oos["signal"] = (oos["pred"] > 0).astype(int)
    oos["strategy_ret"] = oos["signal"] * oos["actual"]
    
    # Performance metrics
    total_return = (1 + oos["strategy_ret"]).prod() - 1
    buyhold_return = (1 + oos["actual"]).prod() - 1
    
    # Sharpe ratio (annualized, assuming daily returns)
    sharpe_strategy = (oos["strategy_ret"].mean() / oos["strategy_ret"].std()) * np.sqrt(252)
    sharpe_buyhold = (oos["actual"].mean() / oos["actual"].std()) * np.sqrt(252)
    
    # Win rate
    win_rate = (oos["strategy_ret"] > 0).sum() / len(oos)
    
    # Store results
    results.append({
        "Model": model_name,
        "MAE": mae,
        "RMSE": rmse,
        "Total Return": total_return,
        "Buy&Hold Return": buyhold_return,
        "Sharpe Ratio": sharpe_strategy,
        "B&H Sharpe": sharpe_buyhold,
        "Win Rate": win_rate
    })
    
    print(f"MAE: {mae:.6f}")
    print(f"RMSE: {rmse:.6f}")
    print(f"Total Return: {total_return:.2%}")
    print(f"Buy & Hold Return: {buyhold_return:.2%}")
    print(f"Sharpe Ratio: {sharpe_strategy:.4f}")
    print(f"Win Rate: {win_rate:.2%}")
    
    # TASK 8: Visualize performance
    oos["equity_strategy"] = (1 + oos["strategy_ret"]).cumprod()
    oos["equity_buyhold"] = (1 + oos["actual"]).cumprod()
    
    plt.figure(figsize=(12, 6))
    plt.plot(oos.index, oos["equity_strategy"], 
             label=f"{model_name} Strategy", linewidth=2)
    plt.plot(oos.index, oos["equity_buyhold"], 
             label="Buy & Hold", linewidth=2, alpha=0.7)
    plt.title(f"{ticker} — {model_name} Walk-Forward Backtest")
    plt.xlabel("Date")
    plt.ylabel("Growth of £1 Invested")
    plt.legend()
    plt.grid(alpha=0.3)
    plt.tight_layout()
    plt.show()

# TASK 9: Compare all models
results_df = pd.DataFrame(results)
print("\n" + "="*80)
print("MODEL COMPARISON SUMMARY")
print("="*80)
print(results_df.to_string(index=False))
print("\n")

# Create comparison visualization
fig, axes = plt.subplots(2, 2, figsize=(14, 10))

# Plot 1: Total Returns
axes[0, 0].bar(results_df["Model"], results_df["Total Return"] * 100)
axes[0, 0].axhline(y=results_df.loc[0, "Buy&Hold Return"] * 100, 
                    color='r', linestyle='--', label='Buy & Hold')
axes[0, 0].set_title("Total Return (%)")
axes[0, 0].set_ylabel("Return (%)")
axes[0, 0].legend()
axes[0, 0].grid(alpha=0.3)

# Plot 2: Sharpe Ratios
axes[0, 1].bar(results_df["Model"], results_df["Sharpe Ratio"])
axes[0, 1].set_title("Sharpe Ratio")
axes[0, 1].set_ylabel("Sharpe Ratio")
axes[0, 1].grid(alpha=0.3)

# Plot 3: RMSE
axes[1, 0].bar(results_df["Model"], results_df["RMSE"])
axes[1, 0].set_title("Root Mean Squared Error")
axes[1, 0].set_ylabel("RMSE")
axes[1, 0].grid(alpha=0.3)

# Plot 4: Win Rate
axes[1, 1].bar(results_df["Model"], results_df["Win Rate"] * 100)
axes[1, 1].set_title("Win Rate (%)")
axes[1, 1].set_ylabel("Win Rate (%)")
axes[1, 1].axhline(y=50, color='r', linestyle='--', alpha=0.5)
axes[1, 1].grid(alpha=0.3)

plt.tight_layout()
plt.show()

print("\nAnalysis complete!")
